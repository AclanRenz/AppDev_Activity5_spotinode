<main class="main-view">
    <div class="top-bar">
        <div>
            <h3>renz</h3><h1 class="vibes">VIBES</h1>
        </div>
        <div class="user-avatar">
            <a id="addSongBtn" class="add-music-btn" type="button"> + Add Music</a>
        </div>
    </div>
    <h2>All Songs</h2>
    <!-- Modal -->
    <div id="songModal" class="modal" style="display:none;">
        <div class="modal-content">
            <span class="close" id="close">&times;</span> <!-- Corrected from spanc to span -->
            <h2 class="addnew">Add New Song</h2>
            <form action="/upload" id="uploadForm" method="POST" enctype="multipart/form-data">
                <label for="title">Title: </label>
                <input type="text" id="title" name="title" required>

                <label for="artist">Artist: </label>
                <input type="text" name="artist" id="artist" required>

                <label for="image_cover">Cover Image: </label>
                <input type="file" id="image_cover" name="image_cover" accept="image/*" required>

                <label for="songFile">Music File: </label>
                <input type="file" id="songFile" name="songFile" accept="audio/*" required>

                <button type="submit" class="add-music-btn">Add Song</button>
            </form>
        </div>
    </div>

    <div class="made-for-you">
        <div class="mix-item">
            <div class="mix-image"></div>
            <h3>Daily Mix 1</h3>
            <p>Spotify</p>
        </div>
        <div class="mix-item">
            <div class="mix-image"></div>
            <h3>Daily Mix 2</h3>
            <p>Spotify</p>
        </div>
        <div class="mix-item">
            <div class="mix-image"></div>
            <h3>Daily Mix 3</h3>
            <p>Spotify</p>
        </div>
        <div class="mix-item">
            <div class="mix-image"></div>
            <h3>Discover Weekly</h3>
            <p>Spotify</p>
        </div>
        <div class="mix-item">
            <div class="mix-image"></div>
            <h3>Release Radar</h3>
            <p>Spotify</p>
        </div>
    </div>
</main>